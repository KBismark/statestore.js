{
    "exclude": ["node_modules", "dist", "demo", "pages", "**/*.html", "jest.config.js","__tests__","index.js","index.d.ts"],
  
    "compilerOptions": {
        "outDir": "dist",
        // "outFile": "index.js",
        "allowJs": true,
        "esModuleInterop": true,
        "declaration": true,
        "jsx": "react-native",
        "lib": ["es6","dom", "es2022"],
        "moduleResolution": "node",
        "resolveJsonModule": true,
        "skipLibCheck": true,
        "module": "CommonJS",
        "target": "es5",
        "strict": true,
        "forceConsistentCasingInFileNames": true
    },
    "include": [
      "**/*.ts",
      "**/*.tsx",
      "package.json",
      "package-lock.json"
    ]
  }
  